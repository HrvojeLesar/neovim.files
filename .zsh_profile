fuzzy-cd-to() {
    filepath=$(find ~ -not -path "*/.*" | fzf)
    if [[ -d $filepath ]]; then
        dir="$filepath"
    else
        dir=$(dirname "$filepath")
    fi
    cd "$dir"
    zle reset-prompt
}
zle -N fuzzy-cd-to
bindkey "^T" fuzzy-cd-to
